global:
  scrape_interval:     30s
  evaluation_interval: 30s
  external_labels:
      monitor: prom

rule_files:
  - /etc/prometheus/alerts/*.rules

alerting:
  alertmanagers:
  - scheme: http
    static_configs:
    - targets:
        - alertmanager:9093

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']

  - job_name: 'blackbox_exporter'
    static_configs:
      - targets: ['blackbox-exporter:9115']

  - job_name: 'blackbox-ping'
    scrape_interval: 30s
    metrics_path: /probe
    params:
      module: [icmp_ipv4]
    static_configs:
      - targets:
          - 8.8.8.8
          - google.com
          - node-exporter
          - blackbox-exporter
          - cadvisor
          - pushgateway
          - alertmanager
          - grafana
          - prometheus
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox-exporter:9115

  - job_name: 'grafana'
    scrape_interval: 30s
    metrics_path: '/metrics'
    static_configs:
      - targets: ['grafana:3000']

  - job_name: 'alertmanager'
    scrape_interval: 30s
    metrics_path: '/metrics'
    static_configs:
      - targets: ['alertmanager:9093']

  - job_name: 'pushgateway'
    scrape_interval: 30s
    metrics_path: '/metrics'
    static_configs:
      - targets: ['pushgateway:9091']

  - job_name: 'traefik'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['traefik:8082']

  - job_name: 'tempo'
    static_configs:
      - targets: [ 'tempo:3200' ]

  - job_name: 'loki'
    static_configs:
      - targets: [ 'loki:3100' ]
        labels:
          server: '{{ inventory_hostname }}'
          type: service

  - job_name: 'host-node-exporter'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9100']
        labels:
          server: '{{ inventory_hostname }}'
          type: host

{% for server in monitoring_remote_servers %}
  - job_name: 'remote-node-exporter-{{ server.name }}'
    static_configs:
      - targets: ['{{ server.ip }}:{{ server.node_port }}']
        labels:
          server: '{{ server.name }}'
          type: container

  - job_name: 'remote-cadvisor-{{ server.name }}'
    static_configs:
      - targets: ['{{ server.ip }}:{{ server.cadvisor_port }}']
        labels:
          server: '{{ server.name }}'
          type: container

{% if server.traefik_port is defined %}
  - job_name: 'remote-traefik-{{ server.name }}'
    metrics_path: '/metrics'
    static_configs:
      - targets: ['{{ server.ip }}:{{ server.traefik_port }}']
        labels:
          server: '{{ server.name }}'
          type: service
{% endif %}
{% endfor %}